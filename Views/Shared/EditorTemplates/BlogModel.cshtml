@model BlogApp.Models.BlogModel

@using (Html.BeginForm("Create", "Blog"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.TextBoxFor(model => model.Author, new
        {
            @class = "form-control"
        })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new
        {
            @class = "form-control"
        })
    </div>
    <button type="submit" class="btn btn-default">
        @if (Model.Id == 0)
        {
            <text>Add</text>
        }
        else
        {
            <text>Update</text>
        }
    </button>
}