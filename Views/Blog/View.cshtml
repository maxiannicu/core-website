@using BlogApp.Models
@model BlogApp.Models.BlogViewModel
@{
    ViewData["Title"] = @Model.Blog.Title;
}


<div class="page-header">
    <h1>
        @Model.Blog.Title - @Model.Blog.Author
        <small>
            <a href="@Url.Action("Create", "Post", new
                     {
                         blogId = @Model.Blog.Id
                     })" type="button" class="btn btn-success" aria-label="Left Align">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New post
            </a>
        </small>
    </h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="postlist">
                @foreach (PostModel post in @Model.Posts)
                {
                    <div class="panel">
                        <div class="panel-heading row">
                            <h3 class="pull-left">@post.Title</h3>
                        </div>

                        <div class="panel-body">
                            @Html.Raw(post.ShortDescription)
                        </div>

                        <div class="panel-footer">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("View", "Post", new
                                         {
                                             id = post.Id
                                         })" type="button" class="btn btn-default" aria-label="Left Align">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                    Read more
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>